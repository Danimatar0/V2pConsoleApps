
{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "(@Level = 'Error' or @Level = 'Fatal' or @Level = 'Warning')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:/Users/User/Desktop/v2p-helpers-apps/Logs/Accidentdetection/error/",
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 7
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "(@Level = 'Information' or @Level = 'Debug')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "C:/Users/User/Desktop/v2p-helpers-apps/Logs/Accidentdetection/info/",
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 7
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },
    "GlobalConfig": {
      "MqttConfig": {
        "Host": "localhost",
        "Port": 1883
      },
      "RedisConfig": {
        "Host": "172.24.235.105",
        "Port": 6379,
        "Database": 0,
        "Password": "dani123",
        "ConnectionName": "AD",
        "RetryCount": 3,
        "RetryTimeout": 1000,
        "ConnectionTimeout": 10000,
        "KeepAlive": 180,
        "AbortOnFail": false,
        "ScanPageSize": 20
      },
      "RedisChannels": {
        "ActionChannel": "v2p:Actions",
        "TopicsCountChannel": "v2p:TopicsCount"
      },
      "Constants": {
        "VectorJobExpression": "5 * * * * *",
        "VectorJobUnit": "seconds",
        "DevicesSegments": "devicesSegments",
        "DevicesCoordinates": "devicesCoordinates",
        "IntersectionIds": "intersections",
        "RunJobEvery": 5,
        "CollisionThreshold": 2, //in meters
        "TimeSteps": 0.1, //in seconds,
        "BatchSize": 100
      }
    }
  }
